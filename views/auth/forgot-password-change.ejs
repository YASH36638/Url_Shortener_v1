<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Set New Password</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <style>
    body {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
      background: #f4f6f8;
      margin: 0;
      padding: 0;
    }

    .container {
      max-width: 480px;
      margin: 80px auto;
      padding: 0 16px;
    }

    .card {
      background: #fff;
      border: 1px solid #e3e8f2;
      border-radius: 12px;
      padding: 32px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.06);
    }

    h2 {
      text-align: center;
      margin-bottom: 8px;
      color: #1f2f5c;
    }

    p {
      text-align: center;
      font-size: 14px;
      color: #6b7280;
      margin-bottom: 24px;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 16px;
    }

    input {
      padding: 14px 16px;
      font-size: 16px;
      border-radius: 8px;
      border: 1px solid #cfd6e4;
      outline: none;
    }

    input:focus {
      border-color: #1f2f5c;
    }

    button {
      padding: 14px;
      background: #1f2f5c;
      color: #fff;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
    }

    button:hover {
      background: #162447;
    }

    .message {
      font-size: 14px;
      padding: 10px 12px;
      border-radius: 6px;
      margin-bottom: 16px;
    }

    .error {
      background: #ffe6e6;
      color: #b30000;
    }
  </style>
</head>
<body>

  <div class="container">
    <div class="card">
      <h2>Reset Password</h2>
      <p>Enter your new password below</p>

      <% if (typeof errors !== "undefined" && errors.length > 0) { %>
        <div class="message error"><%= errors[0] %></div>
      <% } %>

      <form method="POST" action="/reset-password/confirm">
        <!-- token from query -->
        <input type="hidden" name="token" value="<%= token %>" />

        <input
          type="password"
          name="newPassword"
          placeholder="New password"
          required
        />

        <input
          type="password"
          name="confirmPassword"
          placeholder="Confirm new password"
          required
        />

        <button type="submit">Update Password</button>
      </form>
    </div>
  </div>

</body>
</html>