<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login | URL Shortener</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link rel="stylesheet" href="/index.css">
</head>
<body>
<%- include('../partials/header') %>

    <div class="auth-container">
        <h1>Login</h1>
        <p class="subtitle">Access your shortened URLs</p>

        <% if (typeof error !== 'undefined' && error.length > 0) { %>
            <div class="error"><%= error %></div>
        <% } %>

        <% if (typeof success !== 'undefined' && success.length > 0) { %>
            <div class="success"><%= success[0] %></div>
        <% } %>

        <form action="/login" method="POST" class="auth-form">

            <div class="form-group">
                <label for="email">Email Address</label>
                <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    placeholder="Enter your email"
                    required
                >
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input 
                    type="password" 
                    id="password" 
                    name="password" 
                    placeholder="Enter your password"
                    required
                >
            </div>

            <% if(typeof errors !== 'undefined' && errors.length > 0 ) { %> 
                <% errors.forEach((err) => { %> 
                    <p class="flash-error"> <%= err.msg || err %></p>
                <% }); %> 
            <% } %>

            <button type="submit" class="btn-primary">
                Login
            </button>

            <div class="separator">
                <span>OR</span>
            </div>

            <div class="social-login">
                <a href="/google" class="btn-social btn-google">
                    <i class="fab fa-google"></i> Login with Google
                </a>
                <a href="/github" class="btn-social btn-github">
                    <i class="fab fa-github"></i> Login with GitHub
                </a>
            </div>

        </form>
        
        <br>
        <a href="/reset-password" class="forgot-password-link">Forgot Password?</a>
        <br>
        <p class="redirect-text">
            Donâ€™t have an account?
            <a href="/register">Create one</a>
        </p>

    </div>
<%- include('../partials/footer') %>
</body>
</html>