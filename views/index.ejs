<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/favicon.png" type="image/png">
    <link rel="stylesheet" href="/index.css">
    <title>Url Shortner</title>
</head>

<body>
        <%- include('partials/header') %> 
       

    <div id="container">
    <img src="/favicon.png" alt="Logo" class="logo">
    <h1>URL Shortener</h1>
    <form action="/shorten" method="POST">
        <div>
            <label for="url"><b>Enter URL to shorten</b></label>
            <input type="text" name="user[url]" placeholder="Enter URL to shorten">
        </div>
        <div>
            <label for="code"><b>Custom Alias</b></label>
            <input type="text" name="user[code]" placeholder="Enter custom alias">
        </div>

        <% if (errors && errors.length > 0) { %>
  <div class="flash-error">
    <%= errors[0] %>
  </div>
<% } %>

<% if (success && success.length) { %>
  <div class="success"><%= success[0] %></div>
<% } %>
        <button type="submit">Shorten URL</button>
    </form>
        <br>
        <div>
            <h2>Shortened Url</h2>
            <!-- <ul>{{ }}</ul> -->
<ul class="link-list">
  <% links.forEach(link => { %>
    <li class="link-item" data-id="<%= link.id %>">

      <div class="short-url">
        <a href="/<%= link.shortCode %>" target="_blank">
          <%= protocol %>://<%= host %>/<%= link.shortCode %>
        </a>
      </div>

      <div class="original-url">
        <%= link.url.length > 80 ? link.url.slice(0,80) + "..." : link.url %>
      </div>
      <br>
      <div class="actions">
          <a href="/edit/<%= link.id %>" class="small-btn edit-btn">
    Edit
  </a>
  <form action="/delete/<%= link.id %>" method="POST" class="delete-form">
    <button
      type="submit"
      class="small-btn delete-btn"
      onclick="return confirm('Are you sure you want to delete?')">
      Delete
    </button>
  </form>

          </div>

    </li>
  <% }) %>
</ul>

                
        </div>
    </div>
    <%- include('partials/footer') %>
</body>
</html>